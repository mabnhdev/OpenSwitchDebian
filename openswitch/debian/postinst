#!/bin/sh
# postinst script for openswitch
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
        ln -sf /var/log /srv/www/logs > /dev/null || true
        ln -sf /var/tmp /srv/www/var > /dev/null || true
        ln -sf /usr/lib/python2.7/dist-packages/restd.py /usr/bin/restd.py > /dev/null || true
        # TODO - need to get the dynamic version into os-release 
        sed '/^BUILD_ID/ d' < /usr/lib/os-release > tmp-os-release
        echo BUILD_ID=\"openswitch1.1-5\" >> tmp-os-release
        mv tmp-os-release /usr/lib/os-release
        # /etc/init.d/openswitch.sh start > /dev/null
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
        unlink /srv/www/logs > /dev/null || true
        unlink /srv/www/var > /dev/null || true
        unlink /usr/bin/restd.py > /dev/null || true        
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
